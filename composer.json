{
    "name": "vcl-php/vcl",
    "description": "VCL for PHP - Delphi-inspired Visual Component Library for building web applications",
    "type": "library",
    "license": "LGPL-2.1-or-later",
    "keywords": [
        "vcl",
        "delphi",
        "components",
        "ui",
        "framework",
        "rad"
    ],
    "authors": [
        {
            "name": "qadram software S.L.",
            "email": "support@qadram.com",
            "role": "Original Developer (2004-2008)"
        },
        {
            "name": "Gunnar Beushausen",
            "role": "PHP 8.4 Modernization (2026)"
        }
    ],
    "homepage": "https://github.com/user/vcl-php",
    "require": {
        "php": "^8.4",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-session": "*",
        "doctrine/dbal": "^4.0",
        "doctrine/migrations": "^3.9",
        "symfony/html-sanitizer": "^8.0",
        "symfony/validator": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0"
    },
    "suggest": {
        "ext-pdo": "Required for database support via Doctrine DBAL",
        "ext-pdo_mysql": "Required for MySQL database support",
        "ext-pdo_pgsql": "Required for PostgreSQL database support",
        "ext-pdo_sqlite": "Required for SQLite database support",
        "ext-oci8": "Required for Oracle database support",
        "ext-gd": "Required for image manipulation features",
        "smarty/smarty": "Template engine integration"
    },
    "autoload": {
        "psr-4": {
            "VCL\\": "src/VCL/",
            "VCL\\Migrations\\": "migrations/"
        },
        "files": [
            "src/bootstrap.php",
            "src/VCL/Core/constants.php",
            "src/VCL/RTL/functions.php",
            "src/VCL/Graphics/constants.php",
            "src/VCL/Forms/constants.php",
            "src/VCL/StdCtrls/constants.php",
            "src/VCL/Database/constants.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "VCL\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/migrate"
    ],
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage/",
        "analyse": "phpstan analyse",
        "analyse:baseline": "phpstan analyse --generate-baseline",
        "check": [
            "@analyse",
            "@test"
        ],
        "migrate": "php bin/migrate migrate",
        "migrate:status": "php bin/migrate status",
        "migrate:rollback": "php bin/migrate rollback",
        "migrate:reset": "php bin/migrate reset",
        "migrate:refresh": "php bin/migrate refresh"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.4.0"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
