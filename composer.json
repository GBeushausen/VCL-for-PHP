{
    "name": "vcl-php/vcl",
    "description": "VCL for PHP - Delphi-inspired Visual Component Library for building web applications",
    "type": "library",
    "license": "LGPL-2.1-or-later",
    "keywords": [
        "vcl",
        "delphi",
        "components",
        "ui",
        "framework",
        "rad"
    ],
    "authors": [
        {
            "name": "qadram software S.L.",
            "email": "support@qadram.com",
            "role": "Original Developer"
        }
    ],
    "homepage": "https://github.com/user/vcl-php",
    "require": {
        "php": "^8.4",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-session": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0"
    },
    "suggest": {
        "ext-mysqli": "Required for MySQL database support",
        "ext-oci8": "Required for Oracle database support",
        "ext-interbase": "Required for InterBase/Firebird database support",
        "ext-gd": "Required for image manipulation features",
        "adodb/adodb-php": "Alternative database abstraction layer",
        "smarty/smarty": "Template engine integration"
    },
    "autoload": {
        "psr-4": {
            "VCL\\": "src/VCL/"
        },
        "files": [
            "src/bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "VCL\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src --level=5",
        "check": [
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.4.0"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
